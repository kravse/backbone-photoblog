    display: block

.portfolio-page
  
  .Portfolio
    display: block
    

.gallery
  padding-bottom: 30px
  
  [class*=column]+[class*=column]:last-child
    float: left
    
  .columns
    border: 2px solid transparent
      
    &:hover
      border: 2px solid site-orange
  
  .popup
    background-repeat: no-repeat
    background-position: center nav-height+15px
    background-size: contain
    display: none
    position: fixed
    width: 90%
    left: 50%
    margin-left: -45%
    height: 80%
    top: 0
    z-index: 2
    
    +media('mobile')
      width: 100%
      left: 0
      margin-left: 0
  
  .popup-bg
    display: none
    background: #333
    position: fixed
    top: 0
    left: 0  
    width: 100%
    height: 100%
    opacity: 0.7
    z-index: 1
    
  .arrow.arrow-left
    display: none
    z-index: 3
    opacity: 1
  
  .arrow.arrow-right
    display: none
    z-index: 3
    opacity: 1
    
.gallery.show-popup
  
  .arrow.arrow-left
    display: block
  
  .arrow.arrow-right
    display: block
    
  .popup
    display: block  
  
  .popup-bg
    display: block
    
.gallery-image
  background-repeat: no-repeat
  background-size: cover
  background-position: center top
  display: block
  height: 200px
  margin: 10px 5px 
  