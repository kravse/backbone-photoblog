
.home
  
  .image.standard-width
    height: 85%
    opacity: 1
    animation: fadein 0.5s
    
    +media('mobile')
      width: 100%
      left: 0
      margin-left: 0
      
    img
      max-width: 100%
      max-height: 100%
      margin: 0 auto
      display: block
    
  .home-about-text
    position: fixed
    bottom: 10px
    left: 50%
    margin-left: -40%
    width: 80%
    transition: opacity 0.4s ease
    
    +media('mobile')
      width: 100%
      bottom: 10px
      left: 0
      margin-left: 0
    
    .about-text-inner
      display: block
      width: 80%
      padding: 10px
      max-width: 800px
      margin: 0 auto
      border: 1px solid #e5e5e5
      position: relative
      
      +media('mobile')
        width: 95%
              
      a
        display: block
        width: 30px
        height: 30px
        max-width: 100%
        max-height: 100%
        position: absolute
        right: 0px
        top: 0px
        background-image: url('../images/dark-x.png')
        background-size: 13px
        background-position: center center
        background-repeat: no-repeat
        z-index: 1
        transition: transform 0.4s ease

        &:hover
          transform: rotate(90deg)
          
          +media('mobile')
            transform: none
      
      p
        font-family: 'Lato', 'helvetica', sans-serif
        font-size: 14px
        font-weight: 300
        position: relative
        z-index: 1
        margin: 5px 0
        padding-right: 20px
      
      &:before
        position: absolute
        content: ''
        display: block
        left: 0 
        top: 0
        width: 100%
        height: 100%
        background: #f5f5f5
        opacity: 0.9
        z-index: 0
        max-width: 1000px
        margin: 0 auto
    

  .arrow.mobile-hidden
    
    span
      
      +media('mobile')
        opacity: 0
      
      
  .arrow
    
    +media('max', 1125px)
      top: 150px
    
    +media('mobile')
      position: absolute
      background-image: none
      height: 100%
      opacity: 0.9
      width: 50%
      top: 0
      
  
  .arrow-left
    
    span
      transition: opacity 0.5s ease-in-out

      +media('mobile')
        display: block
        position: absolute
        top: 100px
        left: 20px
        width: 64px
        opacity: 1
        height: 64px
        background-image: url('../images/arrows.png')
        background-size: 128px
        background-repeat: no-repeat
        background-position: 0 -64px

  .arrow-right
   
    span
      transition: opacity 0.5s ease-in-out
            
      +media('mobile')
        display: block
        position: absolute
        opacity: 1
        top: 100px
        right: 20px
        width: 64px
        height: 64px
        background-image: url('../images/arrows.png')
        background-size: 128px
        background-repeat: no-repeat
        background-position: 0 -64px
        background-position: -64px -64px
  
@keyframes fadein 
  from
    opacity: 0
  to
    opacity: 1