.projects
  .galleries
    font-family: 'Lato', 'helvetica', sans-serif
    font-weight: 300
    font-size: 17px
    display: block
    text-align: center
    color: site-orange
  .project-box
    margin-top: 20px
    
    .project-link.disabled
      
      &:hover
        border: 1px solid transparent
      
      &:before
        content: ''
        position: absolute
        top: 0 
        left: 0
        width: 100%
        height: 81%
        background: #333
        opacity: 0.7
      
      &:after
        content: 'Coming Soon'
        color: #fff
        font-family: 'Open sans', sans-serif
        font-weight: 300
        font-size: 20px
        top: 0
        left: 0
        position: absolute
        width: 100%
        text-align: center
        padding: 40% 0 
        line-height: 20%

    .project-link
      padding: 10px
      display: block
      position: relative
      border: 1px solid transparent
      color: #505050
      background-size: 90%
      background-position: center 10px
      padding-bottom: 80%
      background-repeat: no-repeat
      position: relative
      
      &:hover
        border: 1px solid site-orange
        
        +media('mobile')
          border: 1px solid transparent
     
      p
        position: absolute
        bottom: 0
        left:0
        width: 100%
        display: block
        margin: 10px 0
        text-align: center
        font-family: 'Lato', 'helvetica', sans-serif
        font-weight: 300

  
    