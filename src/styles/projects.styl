.projects
  .galleries
    font-family: 'Lato', 'helvetica', sans-serif
    font-weight: 300
    font-size: 17px
    display: block
    text-align: center
    color: site-orange
  .project-box
    margin-top: 20px
    
    a
      padding: 10px
      display: block
      border: 1px solid transparent
      color: #505050
      background-size: 90%
      background-position: center 10px
      padding-bottom: 80%
      background-repeat: no-repeat
      position: relative
      
      &:hover
        border: 1px solid site-orange
     
      p
        position: absolute
        bottom: 0
        left:0
        width: 100%
        display: block
        margin: 10px 0
        text-align: center
        font-family: 'Lato', 'helvetica', sans-serif
        font-weight: 300

  
    